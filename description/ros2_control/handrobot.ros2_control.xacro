                <state_interface name="position"/>
            </joint>

            <!-- Joint 5 -->
            <joint name="joint5-bd">
                <command_interface name="position">
                    <param name="min">-1</param>
                    <param name="max">1</param>
                </command_interface>
                <state_interface name="position"/>
            </joint>

            <joint name="joint5-dm">
                <command_interface name="position">
                    <param name="min">-1</param>
                    <param name="max">1</param>
                </command_interface>
                <state_interface name="position"/>
            </joint>

            <joint name="joint5-mu">
                <command_interface name="position">
                    <param name="min">-1</param>
                    <param name="max">1</param>
                </command_interface>
                <state_interface name="position"/>
            </joint>
            
        </ros2_control>
    
    </xacro:macro>

</robot>