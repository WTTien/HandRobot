<?xml version="1.0"?>
<robot xmlns:xacro="https://www.ros.org/wiki/xacro">

    <xacro:macro name="handrobot_description" params="parent *origin">

    <xacro:include filename="$(find handrobot_ros2_control)/urdf/create_link.xacro" />

    <joint name="base_joint" type="fixed">
        <xacro:insert_block name="origin" />
        <parent link = "${parent}" />
        <child link = "base_link" />
    </joint>

    <xacro:create_link
        link_name="base_link"
        xyz_offset="0 0 0"
        rpy_offset="0 0 0"
        mesh_package="handrobot_ros2_control"
        mesh_name="FirstPart"
        color="blue"
    />

    <joint name="joint1" type="continuous">
        <parent link="base_link" />
        <child link= "link1" />
        <origin xyz="0 0.1 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="0.7"/>
        <limit effort="300" velocity="3.0"/>
    </joint>

    <xacro:create_link
        link_name="link_1"
        xyz_offset="0 0 0"
        rpy_offset="0 0 0"
        mesh_package="handrobot_ros2_control"
        mesh_name="SecondPart"
        color="orange"
    />

    </xacro:macro>
</robot>